@model AppUserSignInModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";

}

<form class="mt-5 w-50 mx-auto p-4 shadow " asp-action="Login" method="post">
    <div class="form-group ">
        <h1 class="text-center">Giriş Yap</h1>

    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mt-4  text-center">
        <a asp-action="Register" class="btn btn-warning btn-sm"> Kayıt Ol</a>
        <button type="submit" class="btn btn-info btn-sm">Giriş Yap </button>
    </div>
</form>